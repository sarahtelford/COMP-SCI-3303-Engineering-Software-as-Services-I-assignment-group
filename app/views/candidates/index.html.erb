<h1 class="ui header">
  Australian Federal Election
</h1>

<%= link_to new_candidates_path, class: "ui primary right floated button" do %>
  <i class="add icon"></i> New Candidate
<% end %>

<table class="ui table">
  <tr>
    <th>
      Candidate Name
    </th>
    <th>
      Party
    </th>
  </tr>
  <tbody>
  <% @candidate.each do |candidates| %>
    <tr>
      <td><%= candidates.name %></td>
      <td><%= candidates.party %></td>
      <td><%= candidates.birthday %></td>
    </tr>
  <% end %>
  </table>

<br>



<%#= link_to @candidate.first, class: "ui button" do %>
<!--  <i class="eye icon"></i> Show-->
<%# end %>


<div class="ui basic buttons">
  <%= link_to :above_line, class: "ui button" do %>
    <i class="edit icon"></i> above line
  <% end %>
</div>

<div class="ui basic buttons">
  <%= link_to :below_line, class: "ui button" do %>
    <i class="edit icon"></i> below line
  <% end %>
</div>

